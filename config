command=./$name $instance
colors=true
interval=5

[ipv6]

[disk]
instance=/
format=%avail

# Default values
#format=%free
#format_below_threshold is left unset
#format_not_mounted is left unset
#prefix_type=binary
#threshold_type=percentage_avail
#low_threshold=0

[wireless]
instance=_first_
format_up=W: (%quality at %essid) %ip
format_down=W: down

[ethernet]
instance=_first_
format_up=E: %ip (%speed)
format_down=E: down

[battery]
instance=all
format=%status %percentage %remaining

[load]
format=%1min

# Default values
#format=%1min %5min %15min
#format_above_threshold is left unset and fallback to format
#max_threshold=5

[tztime]
instance=local
format=%Y-%m-%d %H:%M:%S
